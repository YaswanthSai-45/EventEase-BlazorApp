@code {
    [Parameter] public EventModel Event { get; set; }
    private void ToggleRegistration() => Event.IsRegistered = !Event.IsRegistered;
}

<div class="card">
    <h3>@Event.Title</h3>
    <p>@Event.Location</p>
    <p>@Event.Date.ToShortDateString()</p>
    <button @onclick="ToggleRegistration">
        @(Event.IsRegistered ? "Unregister" : "Register")
    </button>
</div>
